{
  "name": "one-drip",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,ts,tsx,json}'",
    "emulate": "firebase emulators:start",
    "emulate:test": "firebase emulators:exec 'jest'",
    "test:firestore": "firebase emulators:exec --only firestore 'jest --detectOpenHandles __tests__/libs/firebase/authRules.test.ts'",
    "deploy:firestore:rules": "firebase deploy --only firestore:rules",
    "jest": "jest --passWithNoTests"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globalSetup": "<rootDir>/__tests__/setupEnv.ts",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setupEnv.ts"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^2.1.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "date-fns": "^2.28.0",
    "firebase": "^9.8.1",
    "framer-motion": "^6.3.3",
    "jotai": "^1.6.7",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "17.0.35",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "@types/uuid": "^8.3.4",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "focus-visible": "^5.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "typescript": "4.6.4",
    "uuid": "^8.3.2"
  }
}
